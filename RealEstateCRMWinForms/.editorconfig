# EditorConfig helps maintain consistent coding styles for multiple developers
# across various editors and IDEs.

root = true

[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{cs,csx}]
# Keep C# files CRLF on Windows
end_of_line = crlf

